@{
    ViewBag.Title = "SportsStore: Checkout";
}

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <h3>Ship To</h3>
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(details => details.Name, new {@class = "form-control"})
    </div>

    <h3>Address</h3>

    foreach (var property in ViewData.ModelMetadata.Properties.Where(property => property.PropertyName != "Name" && property.PropertyName != "GiftWrap"))
    {
        <div class="form-group">
            <label>@(property.DisplayName ?? property.PropertyName)</label>
            @Html.TextBox(property.PropertyName, null, new {@class = "form-control"})
        </div>
    }

