@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Basic links and Url's</h2>
<table>
    <thead>
        <tr>
            <th>Helper</th>
            <th>Output</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Url.Content("~/Scripts/jquery.validate.js")</td>
            <td>@Url.Content("~/Scripts/jquery.validate.js")</td>
        </tr>
        <tr>
            <td>Html.ActionLink("My link", "Index","People")</td>
            <td>@Html.ActionLink("My link", "Index", "People")</td>
        </tr>
        <tr>
            <td>Url.Action("GetPeople","People")</td>
            <td>@Url.Action("GetPeopleData", "People")</td>
        </tr>
        <tr>
            <td>Url.RouteUrl(new {controller="People", action="GetPeople"})</td>
            <td>@Url.RouteUrl(new { controller = "People", action = "GetPeopleData" })</td>
        </tr>
        <tr>
            <td>Html.RouteLink("My link", new{controller="People",action="GetPeople"})</td>
            <td>@Html.RouteLink("My link", new { controller = "People", action = "GetPeopleData" })</td>
        </tr>
        <tr>
            <td>Html.RouteLink("My link", "FormRoute", new {controller="People",action="GetPeople"})</td>
            <td>@Html.RouteLink("My link", "FormRoute", new { controller = "People", action = "GetPeopleData" })</td>
        </tr>
    </tbody>
</table>