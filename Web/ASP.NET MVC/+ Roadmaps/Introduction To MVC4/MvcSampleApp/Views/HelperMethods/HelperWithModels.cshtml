@model IEnumerable<MvcSampleApp.Models.Menu>

@{
   ViewBag.Title = "HelperWithModels";
}

<h2>HelperWithModels</h2>

@Html.Display("Text")
@Html.Display("Model.Category")

<p>
   @Html.ActionLink("Create New", "Create")
</p>

<table>
   <tr>
      <th>@Html.DisplayNameFor(menu => menu.Text)</th>
      <th>@Html.DisplayNameFor(menu => menu.Price)</th>
      <th>@Html.DisplayNameFor(menu => menu.Category)</th>
      <th></th>
   </tr>
   @foreach (var item in Model)
   {
      <tr>
         <td>@Html.DisplayFor(modelItem => item.Text)</td>
         <td>@Html.DisplayFor(modelItem => item.Price)</td>
         <td>@Html.DisplayFor(modelItem => item.Price)</td>
         <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
         </td>
      </tr>
   }
</table>
