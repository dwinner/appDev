<Window x:Class="DynamicAssembly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dynamic Assembly" Height="300" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto" MinWidth="120"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextCodeTextBox" AcceptsReturn="True" AcceptsTab="True" Grid.Row="0" Grid.Column="0" Margin="4"/>
        <Button x:Name="CompileAndRunButton" Click="CompileAndRunButton_OnClick" Grid.Row="0" Grid.Column="1" Content="Compile and Run" Margin="5,11,5,9"/>
        <TextBlock x:Name="TextOutputBlock" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="4"/>
    </Grid>
</Window>
