@using Emso.WebUi.HtmlHelpers
@model Emso.WebUi.ViewModels.JobVacancyViewModel

<tr>
    <td>
        @Html.DisplayFor(modelItem => Model.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.SalaryLevel)
    </td>
    <td>
        @Html.BuildTranslatedExperience(Model.WorkExperience)
    </td>
    <td>
        @Html.BuildTranslatedEmploymentType(Model.EmploymentType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.IsActive)
    </td>
    <td style="text-decoration: none;">
        @Html.BuildDetailsLink(@Url.Action("Details", new {id = Model.Id}), true)
        @Html.BuildEditLink(@Url.Action("Edit", new {id = Model.Id}))
        @Html.BuildDeleteLink(@Url.Action("Delete", new {id = Model.Id}), true)
    </td>
</tr>