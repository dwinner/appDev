@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width" />
   <title>@ViewBag.Title</title>
   <link href="@BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
   <link href="@BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />   
   @Scripts.Render("~/Scripts/jquery-1.8.2.js")
</head>
<body>
   <header>
      <h1>ASP.NET MVC Sample App</h1>
   </header>
   <nav>
      <ul>
         <li>
            @Html.ActionLink("Layout Sample", "LayoutSample", "ViewsDemo")
         </li>
         <li>
            @Html.ActionLink("Layout using Sections", "LayoutUsingSections", "ViewsDemo")
         </li>
      </ul>
   </nav>
   <div>
      @RenderSection("PageNavigation", false)
   </div>
   <div>
      @RenderBody()
   </div>
   <footer>Sample code for Professional C#</footer>
</body>
</html>
