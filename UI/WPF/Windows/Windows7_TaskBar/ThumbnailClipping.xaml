<Window x:Class="Windows7_TaskBar.ThumbnailClipping"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThumbnailClipping" Height="300" Width="300">
    <Grid Name="LayoutRoot">
        <StackPanel>
            <Button Click="OnShrinkPreviewClick" Margin="10" Padding="20" Content="Set the Preview on Button #1" />
            <Button Click="OnShrinkPreviewClick" Margin="10" Padding="20" Content="Set the Preview on Button #2" />
            <Button Click="OnShrinkPreviewClick" Margin="10" Padding="20" Content="Set the Preview on Button #3" />
        </StackPanel>
    </Grid>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="TaskBarItem" />
    </Window.TaskbarItemInfo>
</Window>