<Window x:Class="App.WindowTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowTracker" Height="300" Width="300">
    <StackPanel>
        <Button Click="OnCreate" Margin="10,10,10,5" Name="CreateButton"
                Content="Click to Create a Document"/>
        <Button Click="OnUpdate" Margin="10,5,10,10" Name="UpdateButton"
                Content="Click to Refresh the Documents"/>
    </StackPanel>
</Window>