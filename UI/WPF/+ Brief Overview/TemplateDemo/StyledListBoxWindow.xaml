<Window x:Class="TemplateDemo.StyledListBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StyledListBoxWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding}" Margin="10" Grid.Row="0" />
        <ListBox ItemsSource="{Binding}" Margin="10" Grid.Row="1" Style="{StaticResource ListBoxStyle1}" />
        <ListBox ItemsSource="{Binding}" Margin="10" Grid.Row="2" Style="{StaticResource ListBoxStyle2}" />
        <ListBox ItemsSource="{Binding}" Margin="10" Grid.Row="3" Style="{StaticResource ListBoxStyle3}" />
    </Grid>
</Window>