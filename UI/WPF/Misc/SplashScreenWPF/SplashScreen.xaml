<Window x:Class="SplashScreenWPF.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen" Height="384" Width="512"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image HorizontalAlignment="Left" Stretch="Fill" VerticalAlignment="Top"
               Source="images/splash.png" />
        <ProgressBar Name="ProgressBar" Minimum="0" Maximum="100" VerticalAlignment="Bottom" Height="30"
                     Background="Transparent" />
        <Label Name="StatusLabel" VerticalAlignment="Bottom" Height="28" Background="Transparent"
               VerticalContentAlignment="Top" Content="Loading" />
    </Grid>
</Window>