<Window x:Class="Printing.PrintScaledVisual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrintScaledVisual" Height="184" Width="269">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Content="Scale Percentage:" />
            <TextBox MinWidth="50" Name="ScaleTextBox" Text="500" />
        </StackPanel>
        <Button Grid.Row="1" Click="OnPrint" Content="Print" />
    </Grid>
</Window>