<Window x:Class="Printing.Xps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xps" Height="455" Width="476" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DocumentViewer Grid.Row="0" Name="DocViewer" />
        <Button Grid.Row="1" Margin="3" Padding="3" Click="OnShowFlow" Content="Show Flow Document" />
        <Button Grid.Row="2" Margin="3" Padding="3" Click="OnPrintXps" Content="Print XPS" />
        <Button Grid.Row="3" Margin="3" Padding="3" Click="OnPrintFlow" Content="Print Flow via XPS" />
    </Grid>
</Window>