<Window x:Class="Animation.CodeAnimation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CodeAnimation" Height="369.6" Width="454.4">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Padding="10" Name="GrowButton" Click="OnGrow" Height="40" Width="160"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Content="Click and Make Me Grow" />

        <Button Grid.Row="1" Padding="10" Name="ShrinkButton" Click="OnShrink"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                 Content="Shrink It Back"/>

        <Button Grid.Row="2" Padding="10" Name="GrowIncrementallyButton" Click="OnGrowIncrementally"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="240"
                Content="Click and Make Me Grow (Incrementally)" />
    </Grid>

</Window>