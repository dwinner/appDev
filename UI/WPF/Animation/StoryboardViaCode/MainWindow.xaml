<Window x:Class="AnimationSequence.ViaCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" x:Name="SampleWindow">
    <StackPanel>        
        <Button Click="OnStart" Content="Start" />
        <Button Click="OnEnd" Content="End" />
        <Button x:Name="FirstButton" Content="Sample" Width="200">
            <Button.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform />
                </TransformGroup>
            </Button.LayoutTransform>
        </Button>
    </StackPanel>
</Window>