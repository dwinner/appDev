<Window x:Class="EditorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_Crash" x:Name="CrashMenuItem" Click="CrashMenuItem_OnClick"/>
        </Menu>
        <TextBox Grid.Row="1" x:Name="EditTextBox" TextChanged="EditTextBox_OnTextChanged" />
        <TextBlock Grid.Row="2" x:Name="TraceTextBlock" />
    </Grid>
</Window>