<Window x:Class="SoundAndVideo.SoundPlayerTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SoundPlayerTest" Height="300" Width="300"
        Closed="OnClosed">
    <StackPanel Margin="5">
        <Button Click="OnPlayAudio" Content="Play Audio Synchronously" />
        <Button Click="OnPlayAudioAsync" Content="Play Audio Asynchronously" />
        <Button Click="OnPlayWithMediaPlayer" Content="Play with MediaPlayer" />
    </StackPanel>
</Window>