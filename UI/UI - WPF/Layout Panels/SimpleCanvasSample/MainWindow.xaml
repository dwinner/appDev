<Window x:Class="SimpleCanvasSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:SimpleCanvasSample"
        Title="Simple canvas" Height="350" Width="525">
    <l:SimpleCanvas>
        <Button FontSize="40" Content="1" Background="Red" />
        <Button l:SimpleCanvas.Left="40" l:SimpleCanvas.Top="40" FontSize="40" Content="2" Background="Orange" />
        <Button l:SimpleCanvas.Left="80" l:SimpleCanvas.Top="80" FontSize="40" Content="3" Background="Yellow" />
        <Button l:SimpleCanvas.Left="120" l:SimpleCanvas.Top="120" FontSize="40" Content="4" Background="Lime" />
    </l:SimpleCanvas>
</Window>