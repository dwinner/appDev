<Window x:Class="Windows.VistaGlassWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VistaGlassWindow" Height="300" Width="300"
        Loaded="OnLoaded" Background="Transparent">
    <StackPanel Margin="10">
        <TextBlock Margin="5" Text="This is some text." />
        <Button Margin="5" Padding="5" Content="This is a Button" />
        <CheckBox Margin="5" Content="This is a CheckBox" />
    </StackPanel>
</Window>