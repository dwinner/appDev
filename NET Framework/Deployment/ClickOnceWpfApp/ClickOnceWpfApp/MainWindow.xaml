<Window x:Class="ClickOnceWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="517">
        <Label x:Name="FirstLabel" Content="Первое число" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="FirstTextBox" HorizontalAlignment="Left" Height="23" Margin="186,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="SecondLabel" Content="Второе число" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SecondTextBox" HorizontalAlignment="Left" Height="23" Margin="186,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ExecuteButton" Content="Execute" HorizontalAlignment="Left" Margin="392,83,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.04,-0.6" Click="ExecuteButton_Click"/>
        <Button x:Name="CheckForUpdatesButton" Content="Проверить наличие обновлений" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" Width="296" Click="CheckForUpdatesButton_Click"/>
        <Label x:Name="ResultLabel" Content="" HorizontalAlignment="Left" Margin="392,139,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
